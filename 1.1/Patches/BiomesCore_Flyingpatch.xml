<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>*/TerrainDef[defName = "Soil"]/statBases</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>*/TerrainDef[defName = "Soil"]</xpath>
        <value>
          <statBases/>
        </value>
      </li>
    </operations>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/TerrainDef[defName = "Soil"]/statBases</xpath>
    <value>
      <BiomesCore_pathCostFly>2</BiomesCore_pathCostFly>
    </value>
  </Operation>
  
    <Operation Class="PatchOperationSequence">
    <success>Always</success>
    <operations>
      <li Class="PatchOperationTest">
        <xpath>*/TerrainDef[defName = "Soil"]/modExtensions</xpath>
        <success>Invert</success>
      </li>
      <li Class="PatchOperationAdd">
        <xpath>*/TerrainDef[defName = "Soil"]</xpath>
        <value>
          <modExtensions/>
        </value>
      </li>
    </operations>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>*/TerrainDef[defName = "Soil"]/modExtensions</xpath>
    <value>
      <li Class="TerrainMovement.TerrainMovementStatDef">
        <pawnSpeedStat>BiomesCore_WaterfowlFlySpeed</pawnSpeedStat>
        <terrainPathCostStat>BiomesCore_pathCostFly</terrainPathCostStat>
      </li>
    </value>
  </Operation>
</Patch>